########################################
# Discord
########################################

# Token du bot Discord (obligatoire)
DISCORD_BOT_TOKEN=TON_TOKEN_DISCORD_ICI

# Mode debug (True/False ou 1/0)
DEBUG=False


########################################
# Transcription
########################################

# "local" pour Faster-Whisper, "openai" pour l'API OpenAI Whisper
TRANSCRIPTION_METHOD=local

# Modèle Whisper (Faster-Whisper)
WHISPER_MODEL=large-v3

# Langue principale de transcription
WHISPER_LANGUAGE=fr

# Type de calcul pour Faster-Whisper ("float16" recommandé sur GPU)
WHISPER_COMPUTE_TYPE=float16

# Durée minimale d'un segment audio pour être transcrit (en secondes)
MIN_AUDIO_DURATION=0.1

# Seuil de silence pour considérer qu'une phrase est terminée (en secondes)
SILENCE_THRESHOLD=1.2


########################################
# OpenAI (uniquement si TRANSCRIPTION_METHOD=openai)
########################################

# Clé API OpenAI (si tu utilises l'API Whisper)
#OPENAI_API_KEY=sk-...


########################################
# Player map
########################################

# Chemin vers le fichier YAML qui contient la map user_id -> {player, character}
# Tu peux le laisser vide, mais c'est pratique pour garder les noms d'une session à l'autre.
PLAYER_MAP_FILE_PATH=config/player_map.yaml


########################################
# Logs & fichiers
########################################

# Dossier racine des logs
LOGS_DIR=.logs

# Sous-dossier pour les transcriptions (fichiers .log JSON)
TRANSCRIPTS_SUBDIR=transcripts

# Sous-dossier pour les PDF générés
PDF_SUBDIR=pdfs

# Sous-dossier pour l'archivage audio (WAV bruts par user)
AUDIO_ARCHIVE_SUBDIR=audio


########################################
# Archivage audio
########################################

# Archivage de l'audio brut par utilisateur (WAV)
ARCHIVE_AUDIO=False
